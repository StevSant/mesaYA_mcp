# MesaYA MCP Environment Configuration Template
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=mesaYA_mcp
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT_JSON=true

# Backend API Configuration
BACKEND_API_HOST=localhost
BACKEND_API_PORT=3000
BACKEND_API_TIMEOUT=30.0
BACKEND_API_KEY=

# MCP Gateway Configuration (HTTP/SSE transport)
MCP_GATEWAY_HOST=0.0.0.0
MCP_GATEWAY_PORT=8002
MCP_TRANSPORT=stdio  # "stdio" or "sse"

# ============================================
# AI PROVIDERS (for sentiment & vision tools)
# ============================================

# Gemini API Key (RECOMMENDED - free tier available)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# OpenAI API Key (fallback for GPT-4o vision)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Groq API Key (fallback for text analysis)
# Get from: https://console.groq.com/keys
GROQ_API_KEY=

# ============================================
# SUPABASE (for image storage)
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
